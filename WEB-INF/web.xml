        <load-on-startup>3</load-on-startup>
    </servlet>
  <listener>
    <listener-class>judiciaireServlet.JudiciaireSessionListener</listener-class>
    <listener-class>judiciaireServlet.JudiciaireContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>judiciaireServlet.Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>judiciaireServlet.Logout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SelectionMembre</servlet-name>
    <servlet-class>judiciaireServlet.SelectionMembre</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListePretMembre</servlet-name>
    <servlet-class>judiciaireServlet.ListePretMembre</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Emprunt</servlet-name>
    <servlet-class>judiciaireServlet.Emprunt</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Acceuil</servlet-name>
    <url-pattern>/Acceuil</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListePretMembre</servlet-name>
    <url-pattern>/ListePretMembre</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Emprunt</servlet-name>
    <url-pattern>/Emprunt</url-pattern>
  </servlet-mapping>
